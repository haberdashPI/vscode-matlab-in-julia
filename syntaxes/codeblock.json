{
	"scopeName": "julia.matlab.codeblock",
	"injectionSelector": "L:source.julia",
	"patterns": [
		{ "include": "#matlab_code_block" },
		{ "include": "#matlab_code_string" }
	],
	"repository": {
        "matlab_code_string": {
			"begin": "\\b(mat)(\")(?!\")",
			"beginCaptures": {
				"1": {
					"name": "support.function.macro.julia"
				},
				"2": {
					"name": "punctuation.definition.string.begin.julia"
				}
			},
			"end": "[^\\\\](\")",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.string.end.julia"
				}
			},
            "name": "meta.quoted.matlab",
            "patterns": [
                { "include": "source.julia#string_dollar_sign_interpolate" },
                { "include": "source.matlab" }
            ]
		},
		"matlab_code_block": {
			"begin": "\\b(mat)(\"\"\")",
			"beginCaptures": {
				"1": {
					"name": "support.function.macro.julia"
				},
				"2": {
					"name": "punctuation.definition.string.begin.julia"
				}
			},
			"end": "(\"\"\")",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.string.end.julia"
				}
			},
			"name": "meta.embedded.block.matlab",
			"patterns": [
				{
					"include": "source.julia#string_dollar_sign_interpolate"
				},
				{
					"include": "source.matlab"
				}
			]
		}
	}
}

